<%= form_for @tale, html: { class: "nice_form form-inline" } do |f| %>

  <%= f.text_field :title %><br />

  <%= f.text_area :body %>

  <br />
  <div class="publish_box">
    <div class="left">
      <%= f.label :published, "READY" %>
      <%= f.check_box :published %>
    </div>
    <div class="right">
      <%= link_to "BACK", "/admin" %>
      <%= f.submit "SAVE" %>
    </div>
  </div>

<% end %>
