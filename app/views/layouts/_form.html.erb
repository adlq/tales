<%= form_for @tale, html: { class: "nice_form form-inline" } do |f| %>

  <%= f.text_field :title %><br /><br />

  <%= f.text_area :body %>

  <br /><br />
  <%= f.select :published, [['Draft', false], ['Published', true]] %>
  <br /><br />
  <%= button_tag type: "submit", class: "big_button" do %>
    <i class="icon-save icon-white"></i>
  <% end %>

<% end %>
